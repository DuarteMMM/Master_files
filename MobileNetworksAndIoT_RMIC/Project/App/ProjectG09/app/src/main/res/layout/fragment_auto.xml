    <TextView
        android:id="@+id/panel_voltage_auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="Panel Voltage"
        android:textAllCaps="false"
        android:textColor="#03A9F4"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/power_auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/panel_voltage_auto"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:text="Nominal Power"
        android:textAllCaps="false"
        android:textColor="#03A9F4"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ToggleButton
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:text="@string/button" />

    <Button
        android:id="@+id/reset_chart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:text="Reset" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/voltageChart"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@+id/power_auto"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="-2dp" />
    <!--com.jjoe64.graphview.GraphView
